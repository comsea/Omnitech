                    <li class="ombrage">FORMATION</li>
                    <li class="ombrage">MAINTENANCE</li>
                    <li class="ombrage">SAV</li>
                </ul>
            </div>
            <div class="max-h-60">
                <img src="{{ asset("build/images/grid3.png") }}" alt="Image présentation" class="w-full h-full object-cover">
            </div>
            <div class="max-h-60">
                <img src="{{ asset("build/images/grid4.png") }}" alt="Image présentation" class="w-full h-full object-cover">
            </div>
        </div>
    </div>
 
    <div class="w-5/6 flex lg:flex-row flex-col-reverse items-center justify-between lg:space-x-6 lg:mt-44 mt-32 mb-24">
