{% extends 'base.html.twig' %}

{% block title %}OMNITECHNIQUE | Recrutement{% endblock %}

{% block header %}
    <div class="h-[50vh] w-full flex flex-col justify-center items-center relative">
        <video autoplay muted loop class="h-full w-full object-cover absolute -z-10">
            <source src="{{ asset("build/videos/bg.mp4") }}" type="video/mp4" class="h-full w-full">
        </video>
        <div class="w-full flex flex-col justify-center items-center space-y-10">
            <img src="{{ asset("build/images/logo.png") }}" alt="Logo Omnitechnique" class="w-1/3">
            <h1 class="text-white font-bold text-7xl">RECRUTEMENT</h1>
        </div>
    </div>
{% endblock %} 

{% block body %}
    <div class="w-5/6 flex flex-col justify-center items-center mt-20 space-y-10">
        <div class="font-bold text-5xl">
                <h2 class="text-[#D7D960]">NOS OFFRES D'EMPLOIS</h2>
        </div>

        <div class="recrutement w-full">
            {% for job in jobs %}
                <div class="flex justify-center items-center">
                    <div class="border-4 border-[#294690] flex flex-col items-center justify-center space-y-4 w-11/12">
                        <div class="bg-[#294690] text-white py-5 flex flex-col w-full items-center space-y-2 relative">
                            <h3 class="text-4xl font-bold">{{ job.title }}</h3>
                            <h4 class="text-3xl font-semibold">Poste en {% for type in job.contractType %}{{ type.name }}{% endfor %}</h4>
                        </div>
                        <div class="px-4 w-full flex flex-col">
                            <p>Description du contrat :</p>
                            <div class="line-clamp-4 pl-2">{{ job.description|raw }}</div>
                        </div>
                        <div class="pb-4">
                            <a href="{{ path('app_job', {'id': job.id}) }}" class="flex items-center justify-center text-[#294690]"><span class="rounded-full border-2 border-[#294690] px-2 mr-2">></span> en savoir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}