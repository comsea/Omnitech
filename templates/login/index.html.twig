{% extends 'base.html.twig' %}

{% block title %}MNITECHNIQUE | Connexion{% endblock %}

{% block header %}
    <div class="h-[50vh] w-full flex flex-col justify-center items-center relative">
        <video autoplay muted loop class="h-full w-full object-cover absolute -z-10">
            <source src="{{ asset("build/videos/bg.mp4") }}" type="video/mp4" class="h-full w-full">
        </video>
        <div class="w-full flex flex-col justify-center items-center space-y-10">
            <img src="{{ asset("build/images/logo.png") }}" alt="Logo Omnitechnique" class="w-1/3">
            <h1 class="text-white font-bold text-7xl">CONNEXION</h1>
        </div>
    </div>
{% endblock %} 

{% block body %}
    {% if error %}
        <div class="flex flex-row justify-center">
            <div class="text-red-600 border border-red-600 bg-red-300 p-2 mt-4 rounded">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}
    
    <div class="flex justify-center items-center my-16 w-full">
        <form action="{{ path('app_login') }}" method="post" class="flex flex-col justify-center items-start lg:w-1/3 md:w-1/2 sm:w-3/5 w-11/12 bg-[#294690] rounded-sm p-4 text-white">
            <div class="w-full mb-2">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" class="w-full p-1 rounded-sm text-black"/>
            </div>

            <div class="w-full mb-8">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" class="w-full p-1 rounded-sm text-black"/>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="bg-[#D7D960] text-[#294690] px-4 py-1 rounded-sm">Se connecter</button>
        </form>
    </div>
{% endblock %}
