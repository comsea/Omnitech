        <video autoplay muted loop class="h-full w-full object-cover absolute">
            <source src="{{ asset("build/videos/bg.mp4") }}" type="video/mp4" class="h-full w-full">
        </video>
        <img src="{{ asset("build/images/logo.png") }}" alt="Logo Omnitechnique" class="z-10">
    </div>
{% endblock %} 

